<?php
  $hpo = Sentry::findGroupByName('Health Professional Observer');
  $hua = Sentry::findGroupByName('Healthcare Unit Admin');
  $su = Sentry::findGroupByName('Super User');
?>

    <p class="pull-right">
        <?php if(Sentry::getUser()->hasAccess('cms.users.create')): ?>
            <a href="<?php echo route('users.create'); ?>" class="btn"><i class="icon-plus"></i> New User</a>
        <?php endif; ?>
    </p>

    <table class="table table-striped" id="user-table">
        <thead>
