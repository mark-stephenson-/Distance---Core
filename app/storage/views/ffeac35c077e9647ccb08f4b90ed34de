                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          <?php foreach($users as $user): ?>
              <?php if(((Sentry::getUser()->inGroup($hua) AND !($user->inGroup($su))) OR !Sentry::getUser()->inGroup($hua))): ?>
            <tr>
                <td>
                    <?php echo $user->first_name; ?>

                </td>
                <td>
                    <?php echo $user->last_name; ?>

                </td>
                <td>
                    <a href="mailto:<?php echo $user->email; ?>"><?php echo $user->email; ?></a>
                </td>
                <td>
                    <?php if($user->groups): ?>
                        <?php foreach($user->groups as $group): ?>
                            <?php echo $group->name; ?> <br>
                        <?php endforeach; ?>
                    <?php endif; ?>
                </td>
                <td>
                  <?php /*
                    <?php foreach($user->trusts as $trust): ?>
                        <?php echo $trust->name; ?> <br>
                    <?php endforeach; ?>
                    */ ?>
                </td>
                <td>
                    <?php if(is_null($user->last_login)): ?>
                        Never
                    <?php else: ?>
                        <?php echo date('j-m-Y', strtotime($user->last_login)); ?>

                    <?php endif; ?>
                </td>
                <td width="260">
                    <?php if(Sentry::getUser()->hasAccess('cms.users.update')): ?>
                        <a href="<?php echo route('users.edit', array($user->id)); ?>" class="btn btn-small"><i class="icon-edit"></i> Edit</a>
                    <?php endif; ?>

                    <?php if(Sentry::getUser()->hasAccess('cms.users.delete')): ?>
                        <a href="<?php echo route('users.delete', array($user->id)); ?>" class="btn btn-small"><i class="icon-trash"></i> Delete</a>
                    <?php endif; ?>
                </td>
              </tr>
            <?php endif; ?>
          <?php endforeach; ?>
