                    <td><?php echo $report->ward; ?></td>
                    <td><?php echo \Carbon\Carbon::createFromFormat('Y-m-d H:i:s', $report->dates->start)->format('d/m/Y'); ?> - <?php echo \Carbon\Carbon::createFromFormat('Y-m-d H:i:s', $report->dates->end)->format('d/m/Y'); ?></td>
                    <td>
